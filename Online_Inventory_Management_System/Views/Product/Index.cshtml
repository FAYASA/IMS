@model IEnumerable<Inventory.ViewModel.Product.ProductListViewModel>

@{
    ViewData["Title"] = "Product List";
}

<div class="container py-4">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0">@ViewData["Title"]</h4>
            <a asp-action="Create" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle"></i> Add Product
            </a>
        </div>
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Product</th>
                            <th>Description</th>
                            <th>Unit</th>
                            <th>Buy Price</th>
                            <th>Sell Price</th>
                            <th>Branch</th>
                            <th>Type</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.Description</td>
                                <td>@item.MeasureUnitId</td>
                                <td>@item.BuyingPrice</td>
                                <td>@item.SellingPrice</td>
                                <td>@item.BranchName</td>
                                <td>@item.ProductTypeName</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-outline-warning btn-sm me-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-outline-info btn-sm me-1">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
