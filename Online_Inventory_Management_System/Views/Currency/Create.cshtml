@model Inventory.ViewModel.Currency.CurrencyViewModel

@{
    ViewData["Title"] = "Create Currency";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-currency-exchange me-2"></i> @ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter currency name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Code" class="form-label fw-bold">Code</label>
                            <input asp-for="Code" class="form-control" placeholder="e.g. USD" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                            <button type="submit" class="btn btn-dark">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Info Panel -->
        <div class="col-lg-5 d-none d-lg-block">
            <div class="bg-light p-4 rounded-4 shadow-sm border border-dark">
                <h5 class="text-primary mb-3"><i class="bi bi-info-circle"></i> Currency Information</h5>
                <p>
                    <strong>Name:</strong> The official name of the currency.<br />
                    <strong>Code:</strong> The ISO 4217 currency code, typically 3 letters.<br />
                    <strong>Description:</strong> Optional details or notes about this currency.
                </p>
                <hr />
                <p class="text-muted small">
                    Please ensure the currency code is correct to avoid transaction errors.
                </p>
            </div>
        </div>
    </div>
</div>
