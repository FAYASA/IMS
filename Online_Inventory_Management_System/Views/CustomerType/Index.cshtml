@model IEnumerable<Inventory.ViewModel.Customer.CustomerTypeListViewModel>

@{
   ViewData["Title"] = "Customer Types";
}

<div class="container mt-4">
   <h1 class="mb-4 text-center">@ViewData["Title"]</h1>

   <div class="d-flex justify-content-between mb-3">
       <a asp-action="Create" class="btn btn-primary">Create New</a>
   </div>

   <div class="table-responsive">
       <table class="table table-striped table-bordered">
           <thead class="table-dark">
               <tr>
                   <th>Customer Type ID</th>
                   <th>Customer Type Name</th>
                   <th>Description</th>
                   <th>Actions</th>
               </tr>
           </thead>
           <tbody>
               @foreach (var item in Model)
               {
                   <tr>
                       <td>@Html.DisplayFor(modelItem => item.CustomerTypeId)</td>
                       <td>@Html.DisplayFor(modelItem => item.CustomerTypeName)</td>
                       <td>@Html.DisplayFor(modelItem => item.Description)</td>
                       <td>
                           <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.CustomerTypeId" class="btn btn-sm btn-warning  me-1">Edit</a>
                               <a asp-action="Delete" asp-route-id="@item.CustomerTypeId" class="btn btn-sm btn-danger">Delete</a>
                           </div>
                       </td>
                   </tr>
               }
           </tbody>
       </table>
   </div>
</div>
