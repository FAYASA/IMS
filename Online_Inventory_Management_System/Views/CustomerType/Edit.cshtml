@model Inventory.ViewModel.Customer.CustomerTypeViewModel

@{
    ViewData["Title"] = "Edit Customer Type";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="bg-white rounded-4 shadow-lg border-0">
                <div class="bg-dark text-white p-4 rounded-top-4 d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i> @ViewData["Title"]</h4>
                </div>

                <div class="p-4">
                    <form asp-action="Edit" novalidate>
                        <input asp-for="CustomerTypeId" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="CustomerTypeName" class="form-label fw-semibold text-dark">Customer Type Name</label>
                            <input asp-for="CustomerTypeName" class="form-control" placeholder="Enter customer type name" />
                            <span asp-validation-for="CustomerTypeName" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold text-dark">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter description"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-dark">
                                <i class="bi bi-arrow-left-circle"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-dark">
                                <i class="bi bi-check-circle"></i> Update
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
