@model IEnumerable<Inventory.ViewModel.Customer.CustomerTypeListViewModel>

@{
    ViewData["Title"] = "Customer Types";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-success d-flex align-items-center gap-2 shadow-sm">
            <i class="bi bi-plus-circle"></i>
            <span>Create New</span>
        </a>
    </div>

    <div class="card border-0 shadow rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="text-secondary text-uppercase small">Customer Type ID</th>
                            <th class="text-secondary text-uppercase small">Customer Type Name</th>
                            <th class="text-secondary text-uppercase small">Description</th>
                            <th class="text-center text-secondary text-uppercase small">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr class="bg-white">
                                    <td class="fw-semibold">@item.CustomerTypeId</td>
                                    <td>@item.CustomerTypeName</td>
                                    <td class="text-muted">@item.Description</td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.CustomerTypeId" class="btn btn-sm btn-outline-warning rounded-pill me-1" title="Edit">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.CustomerTypeId" class="btn btn-sm btn-outline-danger rounded-pill" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">No customer types found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
