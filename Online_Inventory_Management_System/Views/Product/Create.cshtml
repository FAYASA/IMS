@model Inventory.ViewModel.Product.ProductViewModel

@{
    ViewData["Title"] = "Create Product";
}

<div class="container mt-4 d-flex justify-content-center align-items-center min-vh-50">
    <div class="card border-dark shadow-lg">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Add New Product</h4>
        </div>
        <form asp-action="Create" enctype="multipart/form-data" class="border-0 p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
            <input asp-for="ProductId" type="hidden" />

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="ProductName" class="form-label"></label>
                    <input asp-for="ProductName" class="form-control form-control-sm" />
                    <span asp-validation-for="ProductName" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ProductCode" class="form-label"></label>
                    <input asp-for="ProductCode" class="form-control form-control-sm" />
                    <span asp-validation-for="ProductCode" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Barcode" class="form-label"></label>
                    <input asp-for="Barcode" class="form-control form-control-sm" />
                    <span asp-validation-for="Barcode" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control form-control-sm" rows="1"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="ProductImage" class="form-label"></label>
                    <input asp-for="ProductImage" class="form-control form-control-sm" type="file"/>
                    <span asp-validation-for="ProductImage" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MeasureUnitId" class="form-label"></label>
                    <input asp-for="MeasureUnitId" class="form-control form-control-sm" />
                    <span asp-validation-for="MeasureUnitId" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="BuyingPrice" class="form-label"></label>
                    <input asp-for="BuyingPrice" class="form-control form-control-sm" />
                    <span asp-validation-for="BuyingPrice" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="SellingPrice" class="form-label"></label>
                    <input asp-for="SellingPrice" class="form-control form-control-sm" />
                    <span asp-validation-for="SellingPrice" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="BranchId" class="form-label"></label>
                    <select asp-for="BranchId" class="form-select form-select-sm" asp-items="Model.Branches"></select>
                    <span asp-validation-for="BranchId" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="CurrencyId" class="form-label"></label>
                    <select asp-for="CurrencyId" class="form-select form-select-sm" asp-items="Model.Currencies"></select>
                    <span asp-validation-for="CurrencyId" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="ProductTypeId" class="form-label"></label>
                    <select asp-for="ProductTypeId" class="form-select form-select-sm" asp-items="Model.ProductTypes"></select>
                    <span asp-validation-for="ProductTypeId" class="text-danger small"></span>
                </div>
            </div>

            <div class="mt-3 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="btn btn-dark">
                    <i class="bi bi-save"></i> Create
                </button>
            </div>
        </form>
    </div>
</div>
