@model Inventory.ViewModel.Bill.CreateBillTypeViewModel

@{
   ViewData["Title"] = "Create Bill Type";
}

<div class="container mt-5">
   <div class="row justify-content-center">
       <div class="col-lg-6">
           <div class="card border-0 shadow-lg">
                <div class="card-header bg-dark text-white text-center">
                   <h4 class="mb-0">Create a New Bill Type</h4>
               </div>
               <div class="card-body bg-light">
                   <form asp-action="Create">
                       <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                       <div class="form-group mb-4">
                           <label asp-for="BillTypeName" class="form-label fw-bold">Bill Type Name</label>
                           <input asp-for="BillTypeName" class="form-control" placeholder="Enter bill type name" />
                           <span asp-validation-for="BillTypeName" class="text-danger"></span>
                       </div>

                       <div class="form-group mb-4">
                           <label asp-for="Description" class="form-label fw-bold">Description</label>
                           <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter description"></textarea>
                           <span asp-validation-for="Description" class="text-danger"></span>
                       </div>

                       <div class="d-grid">
                            <button type="submit" class="btn btn-dark btn-lg">Create</button>
                       </div>
                   </form>
               </div>
               <div class="card-footer text-center bg-light">
                    <a asp-action="Index" class="btn btn-link text-dark">Back to List</a>
               </div>
           </div>
       </div>
   </div>
</div>
