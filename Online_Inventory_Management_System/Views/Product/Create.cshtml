@model Inventory.ViewModel.Product.ProductViewModel

@{
    ViewData["Title"] = "Create Product";
}

<div class="container mt-1">
    <div class="row justify-content-center">
        <div class="col-lg-11">
            <div class="card shadow rounded-4">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-box-seam me-2"></i> @ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input asp-for="ProductId" type="hidden" />

                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="ProductName" class="form-label">Product Name</label>
                                <input asp-for="ProductName" class="form-control" />
                                <span asp-validation-for="ProductName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="ProductCode" class="form-label">Product Code</label>
                                <input asp-for="ProductCode" class="form-control" />
                                <span asp-validation-for="ProductCode" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Barcode" class="form-label">Barcode</label>
                                <input asp-for="Barcode" class="form-control" />
                                <span asp-validation-for="Barcode" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="ProductImage" class="form-label">Product Image</label>
                                <input asp-for="ProductImage" class="form-control" type="file" />
                                <span asp-validation-for="ProductImage" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="MeasureUnitId" class="form-label">Measure Unit</label>
                                <input asp-for="MeasureUnitId" class="form-control" />
                                <span asp-validation-for="MeasureUnitId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="BuyingPrice" class="form-label">Buying Price</label>
                                <input asp-for="BuyingPrice" class="form-control" />
                                <span asp-validation-for="BuyingPrice" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="SellingPrice" class="form-label">Selling Price</label>
                                <input asp-for="SellingPrice" class="form-control" />
                                <span asp-validation-for="SellingPrice" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="BranchId" class="form-label">Branch</label>
                                <select asp-for="BranchId" class="form-select" asp-items="Model.Branches"></select>
                                <span asp-validation-for="BranchId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="CurrencyId" class="form-label">Currency</label>
                                <select asp-for="CurrencyId" class="form-select" asp-items="Model.Currencies"></select>
                                <span asp-validation-for="CurrencyId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="ProductTypeId" class="form-label">Product Type</label>
                                <select asp-for="ProductTypeId" class="form-select" asp-items="Model.ProductTypes"></select>
                                <span asp-validation-for="ProductTypeId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mt-4 d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-dark btn-sm">
                                <i class="bi bi-check2-circle me-1"></i> Create
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
