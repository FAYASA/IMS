@model IEnumerable<Inventory.ViewModel.Product.ProductTypeListViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center my-4">Product Types</h1>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th scope="col">Product Type Id</th>
            <th scope="col">Product Type Name</th>
            <th scope="col">Description</th>
            <th scope="col" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ProductTypeId)</td>
                <td>@Html.DisplayFor(modelItem => item.ProductTypeName)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.ProductTypeId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.ProductTypeId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
