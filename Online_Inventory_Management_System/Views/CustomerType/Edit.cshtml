@model Inventory.ViewModel.Customer.CustomerTypeViewModel

@{
   ViewData["Title"] = "Edit";
}

<div class="container mt-5">
   <div class="row justify-content-center">
       <div class="col-md-6">
           <div class="card shadow">
               <div class="card-header bg-dark text-white">
                   <h4 class="mb-0">Edit Customer Type</h4>
               </div>
               <div class="card-body">
                   <form asp-action="Edit">
                       <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                       <input asp-for="CustomerTypeId" type="hidden" />
                       
                       <div class="mb-3">
                            <label asp-for="CustomerTypeName" class="form-label fw-bold">Customer Type Name</label>
                           <input asp-for="CustomerTypeName" class="form-control" />
                           <span asp-validation-for="CustomerTypeName" class="text-danger"></span>
                       </div>
                       
                       <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Description</label>
                           <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter description"></textarea>
                           <span asp-validation-for="Description" class="text-danger"></span>
                       </div>
                       
                       <div class="d-flex justify-content-between">
                           <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                           <button type="submit" class="btn btn-dark">Update</button>
                       </div>
                   </form>
               </div>
           </div>
       </div>
   </div>
</div>
